<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassView">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="600dp"
        android:rotation="180"
        android:layout_height="550dp"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="-325dp"
        android:layout_marginEnd="-200dp"
        app:srcCompat="@drawable/circle1" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="-400dp"
        android:rotation="0"
        app:srcCompat="@drawable/circle1" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/ic_lockward" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box1"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tview"
            android:stretchColumns="2">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title :"/>
                <TextView
                    android:id="@+id/PASSOFTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:layout_span="3"
                    android:padding="10dp"
                    android:text="Password OF"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username :"/>
                <TextView
                    android:id="@+id/USERNAMETV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:layout_span="3"
                    android:padding="10dp"
                    android:text="Password OF"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password :"/>
                <TextView
                    android:id="@+id/PASSTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:layout_span="3"
                    android:padding="10dp"
                    android:text="Password OF"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Added Time :"/>
                <TextView
                    android:id="@+id/ADDEDTIMETV"
                    android:layout_width="match_parent"
                    style="@style/EditText"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:padding="10dp"
                    android:text="A"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Updated Time :"/>
                <TextView
                    android:id="@+id/UPDATEDTIMETV"
                    android:layout_width="match_parent"
                    style="@style/EditText"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:padding="10dp"
                    android:text="Password OF"/>
            </TableRow>
        </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CopyBtn2"
        style="@style/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:text="Copy Password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editBtn"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:text="Edit" />

    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/DelBtn"
    style="@style/button"
    android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:elevation="5dp"
    android:text="Delete" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewa"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewd"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/imageViewa"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_lockward" />

</RelativeLayout>